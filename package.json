{
	"name": "svelte-starter",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"start-db": "docker compose -f dev/db/db.docker-compose.yml up -d",
		"reset-db": "docker compose -f dev/db/db.docker-compose.yml down -v && docker compose -f dev/db/db.docker-compose.yml up -d",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"generate:sdk": "openapi-typescript http://localhost:8080/openapi.json --output src/lib/huma-ai/ai.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"autoprefixer": "^10.4.20",
		"bits-ui": "1.0.0-next.77",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.22.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"formsnap": "^2.0.0",
		"globals": "^15.14.0",
		"lucide-svelte": "^0.473.0",
		"mode-watcher": "^0.5.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.10",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-sonner": "^0.3.28",
		"sveltekit-superforms": "^2.22.1",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.0",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^5.4.11",
		"zod": "^3.24.1"
	},
	"dependencies": {
		"@paralleldrive/cuid2": "github:paralleldrive/cuid2",
		"better-auth": "^1.1.14",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.33.0",
		"drizzle-zod": "^0.5.1",
		"openapi-fetch": "^0.13.4",
		"openapi-typescript": "^7.6.1",
		"pg": "^8.13.1",
		"postgres": "^3.4.5"
	}
}
